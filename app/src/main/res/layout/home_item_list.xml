<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_image_home_item_list"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/text_home_username_item_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/circle_image_home_item_list"
            android:text="username"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_home_title_item_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/circle_image_home_item_list"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:text="Title"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_home_topic_item_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_home_title_item_list"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:text="topic"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_home_explanation_item_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_home_topic_item_list"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Explanation"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/comment_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/text_home_explanation_item_list"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_user_pin" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>