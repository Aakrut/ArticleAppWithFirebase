<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_image_home_item_list"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/text_home_title_item_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/circle_image_home_item_list"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:text="Title"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_home_topic_item_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_home_title_item_list"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="topic"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_home_explanation_item_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_home_topic_item_list"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Explanation"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/like_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_heart_outline"
                android:layout_below="@id/text_home_explanation_item_list"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/comment_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_user_pin"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/like_button"
                android:layout_below="@id/text_home_explanation_item_list"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>